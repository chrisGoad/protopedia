{
  "rules": {
    ".read": true,
    "directory":{
       "$uid":{
           ".write": "auth.uid === $uid"
        }
    },
    "account":{
       "$uid":{
           ".write": "auth.uid === $uid"
        },
        ".indexOn":["userName","inviteKey"]
    },
    "currentCount":{
      ".write":true,
      ".validate":"newData.val() === data.val()+1"
    }/*,
       "maxCount":{
      ".write":true,
    }*/
  }
}

