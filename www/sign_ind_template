 <script>
if (!Object.create) {
  window.location.href = "/unsupportedbrowser";
}
</script>
<script src="http://{{domain}}/djs/pjloginout-{{pjloginout_version}}.js"></script>
<script>
pj.ui.checkBrowser();
</script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>


<script>
(function () {
  $('document').ready(function () {
    pj.ui.isDev = 1;
    pj.ui.setUIconstants();
    var user = pj.user;
    var om = pj.om;
    pj.ui.genTopbar($('#topbar'),{includeTitle:1,toExclude:{"sign_in":1}});
    if (pj.systemDown) {
      $('#systemDownDiv').css('display','block');
      $('#mainDiv').css('display','none');
      return;
    }
    om.checkUp(function (rs) {
      if (rs.status !== "ok") {
        $('#systemDownDiv').css('display','block');
        $('#mainDiv').css('display','none');
        return;
      }

      if (pj.userLimitExceeded) {
        $('#limitExceededDiv').css('display','block');
      } 
      
      var personaSetup  = 0;
      $('#ploginButton').click(function () {
        if(!personaSetup) {
          user.personaSetup();
          personaSetup  = 1;
        }
        navigator.id.request();
      });
    
      $('#twitterButton').click(function () {
        user.signInWithTwitter();
      });
    });

   })
})(prototypeJungle);

</script>

